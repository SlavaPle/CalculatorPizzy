{
  "name": "kalkulator-monorepo",
  "version": "1.0.0",
  "description": "Универсальный калькулятор - монорепо",
  "private": true,
  "workspaces": [
    "web",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:web": "cd web && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:shared": "cd shared && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:web",
    "build:web": "cd web && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:shared": "cd shared && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:web\"",
    "start:web": "cd web && npm run start",
    "start:backend": "cd backend && npm run start",
    "install:all": "npm install && cd web && npm install && cd ../backend && npm install && cd ../shared && npm install",
    "clean": "npm run clean:web && npm run clean:backend && npm run clean:shared",
    "clean:web": "cd web && rm -rf node_modules dist .vite",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "clean:shared": "cd shared && rm -rf node_modules dist",
    "lint": "npm run lint:web && npm run lint:backend && npm run lint:shared",
    "lint:web": "cd web && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:shared": "cd shared && npm run lint",
    "lint:fix": "npm run lint:fix:web && npm run lint:fix:backend && npm run lint:fix:shared",
    "lint:fix:web": "cd web && npm run lint:fix",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "lint:fix:shared": "cd shared && npm run lint:fix",
    "test": "npm run test:web && npm run test:backend && npm run test:shared",
    "test:web": "cd web && npm run test",
    "test:backend": "cd backend && npm run test",
    "test:shared": "cd shared && npm run test",
    "type-check": "npm run type-check:web && npm run type-check:backend && npm run type-check:shared",
    "type-check:web": "cd web && npm run type-check",
    "type-check:backend": "cd backend && npm run type-check",
    "type-check:shared": "cd shared && npm run type-check",
    "db:generate": "cd backend && npm run db:generate",
    "db:push": "cd backend && npm run db:push",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:studio": "cd backend && npm run db:studio",
    "db:seed": "cd backend && npm run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm run install:all && npm run db:generate && npm run db:push",
    "reset": "npm run clean && npm run install:all && npm run db:push"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.22",
    "wait-on": "^7.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
